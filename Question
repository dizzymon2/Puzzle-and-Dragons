

import UIKit

var str = "Hello, playground"

let names = ["Leonerd", "Sheldon", "Penny", "Raju"]



// 문자열 뒤집기
func reverseName(name:String) -> String {
    return String(name.characters.reversed())
}

names.map(reverseName)

// 대문자로 바꾸기
names.map({ print("\($0.uppercased())")})


// 첫문자 출력

names.map({ print("\($0.characters.first!)")})
